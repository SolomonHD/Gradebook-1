<h1>Edit Achievement for <%= @student.name %></h1>

<%= form_tag update do %>
<ul>
  <% @achievements.each do |t| %>
  <li>
    <%= check_box_tag "achievment[#{t.id}]", true, @student.achievements.include?(t) %>
    <%= t.name %>
  </li>
  <% end %>
</ul>

<%= submit_tag "Save Achievements" %>
<% end %>

<%= link_to 'Show', @achievement %> |
<%= link_to 'Back', achievements_path %>
